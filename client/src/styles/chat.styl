
#chat-history
    
    padding 10px
    height 500px
    min-height @height
    max-height @height
    overflow-x hidden
    overflow-y scroll
    border 1px solid #eee
    
    li
        
        // b/c they're flex, they'll keep shrinking
        min-height 65px
        
        margin 6px 0
        font-size 0.9rem
        word-wrap break-word
        border-radius 0.50rem !important
        
        &.system
            min-height 44px
            border none
            color lighten(black, 50%)
            background-color darken(white, 4%)
            font-family monospace
            font-weight bold
            text-transform uppercase
        
        &.incoming
            background-color alpha(red, 3%)
        
        &:not(.incoming, .system)
            background-color alpha(blue, 3%)
        
        .nickname-incoming
            color saturation(red, 60%)
        
        .nickname-outgoing
            color saturation(blue, 60%)
    
